{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "removeComments": true,
        "inlineSourceMap": true,
        "pretty": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/public",
        "./node_modules"
    ]
}