{
  "name": "parcel-boilerplate-node-type-script-sass-ejs",
  "version": "1.0.0",
  "description": "Parcel Node Boilerplate with TypeScript, SASS and EJS",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm-run-all clean copy-assets dev:sass dev:copy-assets dev:parcel watch",
    "watch": "concurrently --kill-others \"npm run watch:scss\" \"npm run watch:js\"  \"npm run watch:views\" \"npm run start\"",
    "watch:views": "nodemon --watch ./src/views -e ejs --exec npm run dev:copy-assets",
    "watch:js": "nodemon --ignore ./src/routes --ignore ./src/index.ts --watch ./src -e ts --exec npm run dev:parcel",
    "watch:scss": "nodemon --watch ./src -e scss --exec npm run dev:sass",
    "dev:sass": "node-sass --include-path ./src/public/scss --output-style expanded ./src/public/scss/main.scss ./dist/public/css/main.css && postcss ./dist/public/css/main.css -o ./dist/public/css/main.css",
    "dev:parcel": "parcel build src/public/js/**/* --target node --out-dir dist/public/js && parcel build src/index.ts --target node --out-dir dist",
    "start": "node .",
    "clean": "rimraf dist/*",
    "dev:copy-assets": "ts-node tools/copyAssets --watch",
    "copy-assets": "ts-node tools/copyAssets",
    "build:sass": "node-sass --include-path src/public/scss --output-style compressed src/public/scss/main.scss dist/public/css/main.css",
    "build:js": "node dev.js",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jquery": "^3.3.33",
    "@types/lodash": "^4.14.149",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "jquery": "^3.5.0",
    "three": "^0.114.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^13.9.1",
    "@types/shelljs": "^0.8.6",
    "autoprefixer": "^9.7.4",
    "beeper": "^2.0.0",
    "concurrently": "^5.1.0",
    "cssnano": "^4.1.10",
    "fs-extra": "^8.1.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.3",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  }
}
